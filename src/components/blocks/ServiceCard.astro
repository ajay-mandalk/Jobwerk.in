---
import { Card, CardHeader, CardTitle, CardContent, CardFooter } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { MagicCard } from "@/components/ui/magic-card";

interface Service {
  id: number;
  title: string;
  description: string;
  icon: string;
  cta: string;
  href: string;
  imageUrl: string;
  gradient: string;
  ctaGradient: string;
  altText?: string;
}

const services: Service[] = [
  {
    id: 1,
    title: "Fractional Mold Die Sharing",
    description: "Share mold dies with other manufacturers to reduce costs and increase utilization",
    icon: "ü§ù",
    cta: "Learn More",
    href: "/services/fractional-sharing",
    imageUrl: "",
    gradient: "from-blue-600/20 to-purple-600/20",
    ctaGradient: "from-blue-500/10 to-purple-500/10",
    altText: "Fractional Mold Die Sharing Service Illustration"
  },
  {
    id: 2,
    title: "Rent Mold Die",
    description: "Flexible mold die rental options for short-term production needs",
    icon: "üè≠",
    cta: "View Options",
    href: "/services/rent-mold",
    imageUrl: "",
    gradient: "from-emerald-600/20 to-teal-600/20",
    ctaGradient: "from-emerald-500/10 to-teal-500/10"
  },
  {
    id: 3,
    title: "Outsource Mold Parts & Product",
    description: "Get high-quality mold parts and products manufactured by our experts",
    icon: "üõ†Ô∏è",
    cta: "Get Quote",
    href: "/services/outsource",
    imageUrl: "",
    gradient: "from-orange-600/20 to-red-600/20",
    ctaGradient: "from-orange-500/10 to-red-500/10"
  },
  {
    id: 4,
    title: "Injection Machine Jobwerk",
    description: "Access our state-of-the-art injection molding machines for your production needs",
    icon: "‚öôÔ∏è",
    cta: "Book Now",
    href: "/services/injection-machines",
    imageUrl: "",
    gradient: "from-pink-600/20 to-rose-600/20",
    ctaGradient: "from-pink-500/10 to-rose-500/10"
  }
];
---

<section 
  class="py-16 bg-gray-50 dark:bg-gray-900"
  aria-label="Our Services"
>
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h1 class="text-3xl lg:text-4xl xl:text-5xl font-bold lg:tracking-tight xl:tracking-tighter bg-clip-text text-transparent bg-gradient-to-r from-blue-800 to-blue-300">
        Our Services
      </h1>
      <p class="text-gray-600 dark:text-gray-300 mt-4 max-w-2xl mx-auto">
        Innovative solutions for your injection molding needs. Explore our comprehensive range of services designed to optimize your manufacturing process.
      </p>
    </div>

    <div 
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6"
      role="list"
      aria-label="Services list"
    >
      {services.map(service => (
        <MagicCard
          imageUrl={service.imageUrl}
          className={`hover:shadow-lg transition-shadow duration-300 bg-gradient-to-br ${service.gradient}`}
          role="listitem"
        >
          <Card className="border-none bg-transparent h-full flex flex-col">
            <CardHeader>
              <span class="text-4xl mb-4" role="img" aria-label={service.icon}>
                {service.icon}
              </span>
              <CardTitle className="text-xl font-bold text-gray-900 dark:text-white">
                {service.title}
              </CardTitle>
            </CardHeader>
            <CardContent>
              <p class="text-gray-600 dark:text-gray-300">
                {service.description}
              </p>
            </CardContent>
            <CardFooter class="mt-auto">
              <Button
                variant="outline"
                className="w-full group relative overflow-hidden"
                asChild
              >
                <a 
                  href={service.href} 
                  class="relative z-10"
                  aria-label={`${service.cta} about ${service.title}`}
                >
                  <div class={`absolute inset-0 bg-gradient-to-r ${service.ctaGradient} opacity-0 group-hover:opacity-100 transition-opacity`}></div>
                  {service.cta}
                </a>
              </Button>
            </CardFooter>
          </Card>
        </MagicCard>
      ))}
    </div>
  </div>
</section>