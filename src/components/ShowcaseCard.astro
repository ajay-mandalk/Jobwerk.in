---
interface Props {
  title: string;
  description: string;
  imageUrl: string;
  features: string[];
}

const { title, description, imageUrl, features } = Astro.props;
---
<div class="bg-white rounded-lg shadow-lg overflow-hidden">
  <img src={imageUrl} alt={title} class="w-full h-48 object-cover">
  <div class="p-6">
    <h3 class="text-2xl font-bold mb-3">{title}</h3>
    <p class="text-gray-600 mb-4">{description}</p>
    <ul class="mb-6 space-y-2">
      {features.map(feature => (
        <li class="flex items-center text-gray-600">
          <svg class="w-4 h-4 mr-2 text-green-500" fill="currentColor" viewBox="0 0 20 20">
            <path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/>
          </svg>
          {feature}
        </li>
      ))}
    </ul>
    <div class="border-t pt-4">
      <div class="flex justify-between items-center mb-4">
        <div>
          <p class="text-gray-600">Price per ticket</p>
          <p class="text-2xl font-bold text-blue-600">â‚¹50,000</p>
        </div>
        <div>
          <p class="text-gray-600">Period</p>
          <p class="text-lg font-semibold">30 days</p>
        </div>
      </div>
      <a href="/BookOrder"
        class="block w-full bg-blue-600 text-white text-center py-3 rounded-md font-semibold hover:bg-blue-700 transition-colors">
        Book Now
      </a>
    </div>
  </div>
</div>