---

import { WarpBackground } from "@/components/ui/warp-background";
import { Card, CardContent, CardDescription, CardTitle } from "@/components/ui/card";
import { Button } from "../ui/button";


const title = "Exciting New Features!"; // Clear and concise title
const description = "We've been hard at work, and we're thrilled to announce some amazing new features!  Check them out to improve your workflow."; // More engaging and informative description
const buttonText = "Launching Soon!";
const buttonLink = "/new-features"; // Replace with the actual link to your new features


---

<WarpBackground client:load >
  <Card className="max-w-lg mx-auto p-4">
    <CardContent className="flex flex-col gap-2 p-4">
      <CardTitle className="text-4xl lg:text-5xl xl:text-5xl font-bold lg:tracking-tight xl:tracking-tighter bg-clip-text text-transparent bg-gradient-to-r from-[#282727]  dark:text-gray-100">{title}</CardTitle>
      <CardDescription className="text-md mt-2 font-semibold text-gradient-to-r from-[#282727] to-gray-[#171717]  max-w-xl mx-auto leading-relaxed">
        {description}
      </CardDescription>
      <Button ref={buttonLink} className="mt-4 bg-gradient-to-r from-blue-500/40 to-purple-500/40 opacity-80">{buttonText}</Button> {/* Clear call to action */}
    </CardContent>
  </Card>
</WarpBackground>




