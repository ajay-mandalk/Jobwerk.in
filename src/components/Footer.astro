---
import PulsatingButton from "@/components/ui/pulsating-button";
import GridPattern from "@/components/ui/grid-pattern";
import FooterTextAnnouncer from "./annoucement/TextBaseAnnouncer.astro/FooterTextAnnouncer.astro";

const footerSections = {
  solutions: [
    { text: "Injection Molding", link: "/solutions/injection-molding" },
    { text: "Mold Design", link: "/solutions/mold-design" },
    { text: "Prototyping", link: "/solutions/prototyping" },
    { text: "Quality Control", link: "/solutions/quality-control" },
  ],
  company: [
    { text: "About Us", link: "/about" },
    { text: "Careers", link: "/careers" },
    { text: "News", link: "/news" },
    { text: "Contact", link: "/contact" },
  ],
  resources: [
    { text: "Documentation", link: "/docs" },
    { text: "Case Studies", link: "/case-studies" },
    { text: "Blog", link: "/blog" },
    { text: "Support", link: "/support" },
    {text: "Blog", link: "/blog"},
  ],
  legal: [
    { text: "Privacy", link: "/privacy" },
    { text: "Terms", link: "/terms" },
    { text: "Cookie Policy", link: "/cookies" },
  ],
};
---

<footer class="relative bg-[#2e054e] dark:bg-[#2e054e]">
  {/* Background Grid Pattern */}
  <GridPattern
    client:visible
    className="absolute inset-0 h-full w-full text-white opacity-20 dark:text-gray-700"
    squares={[
      [0, 0],
      [2, 4],
      [4, 2],
      [6, 6],
    ]}
  />

  {/* CTA Section */}
  <FooterTextAnnouncer client:load text="Join leading manufacturers who trust JobWerk™ for their injection molding needs" />
  <div class="relative z-10">
    <div class="container mx-auto px-6 py-16">
      <div class="flex flex-col items-center text-center space-y-4 max-w-3xl mx-auto">
        <h2 class="text-2xl lg:text-3xl xl:text-4xl font-bold bg-clip-text text-white dark:text-gray-100">
          Transform Your Manufacturing Process
        </h2>
        <p class="text-xl text-white dark:text-white">
          Join leading manufacturers who trust JobWerk™ for their injection molding needs
        </p>
        <div class="flex flex-wrap gap-4 justify-center mt-6">
          <PulsatingButton client:idle>Become Partner</PulsatingButton>
          <a href="/contact" class="inline-flex h-11 items-center justify-center rounded-xl px-8 py-2 text-sm font-medium transition-colors border border-input bg-background hover:bg-accent hover:text-accent-foreground">
            Contact For Quote
          </a>
        </div>
      </div>
    </div>
  </div>

  {/* Main Footer */}
  <div class="relative">
    <div class="container mx-auto px-6 py-16">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-12">
        {/* Brand Column */}
        <div class="lg:col-span-2 space-y-6">
          <a href="/" class="block w-[150px]">
            <img
              src="/logo/jobwerk-dark.svg"
              alt="JobWerk Logo"
              class="hidden dark:block"
            />
            <img
              src="/logo/jobwerk-light.svg"
              alt="JobWerk Logo"
              class="block dark:hidden"
            />
          </a>
          <p class="text-white dark:text-gray-300">
            Revolutionizing injection molding through innovative solutions and reliable partnerships.
          </p>
          <div class="flex gap-4">
            <a
              href="#"
              class="text-white hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-400 transition-colors"
              aria-label="LinkedIn"
            >
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
            </a>
          </div>
        </div>

        {/* Navigation Columns */}
        {Object.entries(footerSections).map(([section, links]) => (
          <div class="space-y-4">
            <h3 class="text-sm font-semibold text-white dark:text-white uppercase tracking-wider">
              {section.charAt(0).toUpperCase() + section.slice(1)}
            </h3>
            <ul class="space-y-3">
              {links.map((item) => (
                <li>
                  <a
                    href={item.link}
                    class="text-white hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-400 transition-colors"
                  >
                    {item.text}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>

    {/* Bottom Bar */}
    <div class="border-t border-gray-200 dark:border-gray-800">
      <div class="container mx-auto px-6 py-8">
        <div class="flex flex-col md:flex-row justify-between items-center gap-4">
          <div class="text-gray-500 dark:text-gray-400 text-sm">
            © {new Date().getFullYear()} JobWerk™. All rights reserved.
          </div>
          <div class="flex gap-8">
            {footerSections.legal.map((item) => (
              <a
                href={item.link}
                class="text-sm text-gray-500 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-400 transition-colors"
              >
                {item.text}
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>