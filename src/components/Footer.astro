---
import { RainbowButton } from "@/components/ui/rainbow-button";
import PulsatingButton from "@/components/ui/pulsating-button";

const footerSections = {
  solutions: [
    { text: "Injection Molding", link: "/solutions/injection-molding" },
    { text: "Mold Design", link: "/solutions/mold-design" },
    { text: "Prototyping", link: "/solutions/prototyping" },
    { text: "Quality Control", link: "/solutions/quality-control" },
  ],
  company: [
    { text: "About Us", link: "/about" },
    { text: "Careers", link: "/careers" },
    { text: "News", link: "/news" },
    { text: "Contact", link: "/contact" },
  ],
  resources: [
    { text: "Documentation", link: "/docs" },
    { text: "Case Studies", link: "/case-studies" },
    { text: "Blog", link: "/blog" },
    { text: "Support", link: "/support" },
  ],
  legal: [
    { text: "Privacy", link: "/privacy" },
    { text: "Terms", link: "/terms" },
    { text: "Cookie Policy", link: "/cookies" },
  ],
};
---

<footer class="relative">
  <!-- CTA Section -->
  <div class="relative overflow-hidden">
    <div
      class="absolute inset-0 bg-gradient-to-b from-blue-50/20 to-blue-100/30 dark:from-blue-950/20 dark:to-blue-900/30"
    >
    </div>
    <div class="container mx-auto px-4 py-16">
      <div
        class="relative flex flex-col items-center text-center space-y-8 max-w-3xl mx-auto"
      >
        <h2 class="text-4xl font-bold tracking-tight">
          Transform Your Manufacturing Process
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300">
          Join leading manufacturers who trust JobWerk™ for their injection
          molding needs
        </p>
        <div class="flex flex-wrap gap-4 justify-center">
          <PulsatingButton client:load>Become Partner</PulsatingButton>
          <a
            href="/contact"
            class="inline-flex h-11 items-center justify-center rounded-xl px-8 py-2 text-sm font-medium transition-colors border border-input bg-background hover:bg-accent hover:text-accent-foreground"
          >
            Contact For Quote
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Footer -->
  <div class="bg-gray-50 dark:bg-gray-900">
    <div class="container mx-auto px-4 py-16">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-12">
        <!-- Brand Column -->
        <div class="lg:col-span-2 space-y-6">
          <div class="flex items-center gap-2">
            <div class="flex gap-1">
              <span class="w-1 h-8 bg-blue-600"></span>
              <span class="w-1 h-6 bg-blue-400"></span>
              <span class="w-1 h-4 bg-blue-200"></span>
            </div>
            <span class="text-2xl font-bold">JobWerk™</span>
          </div>
          <p class="text-gray-600 dark:text-gray-300 max-w-sm">
            Revolutionizing injection molding through innovative solutions and
            reliable partnerships.
          </p>
          <div class="flex gap-4">
            {/* Social Links */}
            <a
              href="#"
              class="text-gray-600 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-400 transition-colors"
            >
              <span class="sr-only">LinkedIn</span>
              <svg
                class="h-6 w-6"
                fill="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                ></path>
              </svg>
            </a>
            {/* Add more social icons as needed */}
          </div>
        </div>

        <!-- Navigation Columns -->
        <div>
          <h3
            class="text-sm font-semibold text-gray-900 dark:text-white uppercase tracking-wider mb-4"
          >
            Solutions
          </h3>
          <ul class="space-y-3">
            {
              footerSections.solutions.map((item) => (
                <li>
                  <a
                    href={item.link}
                    class="text-gray-600 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-400 transition-colors"
                  >
                    {item.text}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>

        <div>
          <h3
            class="text-sm font-semibold text-gray-900 dark:text-white uppercase tracking-wider mb-4"
          >
            Company
          </h3>
          <ul class="space-y-3">
            {
              footerSections.company.map((item) => (
                <li>
                  <a
                    href={item.link}
                    class="text-gray-600 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-400 transition-colors"
                  >
                    {item.text}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>

        <div>
          <h3
            class="text-sm font-semibold text-gray-900 dark:text-white uppercase tracking-wider mb-4"
          >
            Resources
          </h3>
          <ul class="space-y-3">
            {
              footerSections.resources.map((item) => (
                <li>
                  <a
                    href={item.link}
                    class="text-gray-600 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-400 transition-colors"
                  >
                    {item.text}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>

      <!-- Bottom Bar -->
      <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-800">
        <div
          class="flex flex-col md:flex-row justify-between items-center gap-4"
        >
          <div class="text-gray-500 dark:text-gray-400 text-sm">
            © {new Date().getFullYear()} JobWerk™. All rights reserved.
          </div>
          <div class="flex gap-8">
            {
              footerSections.legal.map((item) => (
                <a
                  href={item.link}
                  class="text-sm text-gray-500 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-400 transition-colors"
                >
                  {item.text}
                </a>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>
