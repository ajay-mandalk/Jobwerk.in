---
const services = [
  {
    title: "Injection Molding",
    description: "Professional injection molding services with high precision and quality control. We handle everything from prototyping to mass production.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
    </svg>`
  },
  {
    title: "Mold Design & Manufacturing",
    description: "Expert mold design and manufacturing services using cutting-edge CAD/CAM technology. We ensure optimal performance and longevity.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/>
    </svg>`
  },
  {
    title: "Quality Assurance",
    description: "Comprehensive quality control and testing procedures to ensure your products meet the highest industry standards.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
    </svg>`
  },
  {
    title: "Consulting Services",
    description: "Expert guidance on material selection, design optimization, and manufacturing processes to maximize efficiency and reduce costs.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
    </svg>`
  }
];
---

<section class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
        Our Professional Services
      </h2>
      <p class="mt-4 text-xl text-gray-600">
        Comprehensive plastic molding solutions tailored to your needs
      </p>
    </div>

    <div class="mt-20 grid grid-cols-1 gap-12 sm:grid-cols-2 lg:grid-cols-4">
      {services.map(service => (
        <div class="group relative bg-white p-6 focus-within:ring-2 focus-within:ring-inset focus-within:ring-blue-500 rounded-lg shadow-lg hover:shadow-xl transition-all duration-300">
          <div class="flex items-center justify-center h-16 w-16 rounded-lg bg-blue-100 text-blue-600 mx-auto">
            <Fragment set:html={service.icon} />
          </div>
          <div class="mt-8">
            <h3 class="text-lg font-medium text-gray-900 text-center">
              <span class="absolute inset-0" aria-hidden="true"></span>
              {service.title}
            </h3>
            <p class="mt-4 text-sm text-gray-500 text-center">
              {service.description}
            </p>
          </div>
          <div class="mt-6">
            <a href="/contact" class="text-blue-600 hover:text-blue-800 text-sm font-medium flex items-center justify-center">
              Learn more
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>

    <div class="mt-20 text-center">
      <a href="/BookOrder" class="inline-flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 transition-colors">
        Get Started
      </a>
    </div>
  </div>
</section>
