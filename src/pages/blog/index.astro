---
import Layout from '../../layouts/Layout.astro';
import BlogCard from '../../components/BlogCard.astro';

// Fetch blog posts from your CMS or API
const posts = [
  {
    id: 1,
    title: "Injection Molding Trends 2024",
    description: "Discover the latest trends in injection molding technology",
    date: "2024-01-15",
    image: "/images/mold1.jpg",
    slug: "injection-molding-trends-2024"
  },
  {
    id: 2,
    title: "Material Selection Guide",
    description: "How to choose the right material for your project",
    date: "2024-01-10",
    image: "/images/mold2.jpg",
    slug: "material-selection-guide"
  }
];
---

<Layout title="Blog | JobWerk">
  <section class="bg-white dark:bg-gray-900 py-16">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
          JobWerk Blog
        </h1>
        <p class="text-lg text-gray-600 dark:text-gray-300">
          Insights and updates from the world of injection molding
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map(post => (
          <BlogCard post={post} />
        ))}
      </div>
    </div>
  </section>
</Layout>