---
import Navbar from "../components/navbar/Navbar.astro";
import Footer from "../components/Footer.astro";
import  SpeedInsights  from "@vercel/speed-insights/astro"
import PopupCta from "@/components/blocks/PopupCta.astro";
interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "Injection Molding Solutions",
  description = "Professional injection molding services and solutions"
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
        <!-- Google Site Verification Meta Tag -->
        <meta name="google-site-verification" content="uE1Tgl6rDeFmK5Uf3_Gdz-i3s8lqTww1Q5L0Sjl8Clk" />
    <!-- HubSpot Embed Code -->
    <script type="text/javascript" id="hs-script-loader" async defer src="//js-na1.hs-scripts.com/46558019.js"></script>
  </head>
  <body class="flex min-h-screen flex-col">
    <Navbar />
    
    <main class="flex-grow">
      <slot />
    </main>

    <Footer />
    <PopupCta />
    <SpeedInsights/>
  </body>
</html>