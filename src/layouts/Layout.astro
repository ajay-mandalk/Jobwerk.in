---
import JobworkAnnoucer from "@/components/blocks/JobworkAnnoucer.astro";
import Navbar from "../components/navbar/Navbar.astro";
import Footer from "../components/Footer.astro";
import SpeedInsights from "@vercel/speed-insights/astro";
import PopupCta from "@/components/blocks/PopupCta.astro";
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "ZJobwrk - Multiply Your Molds & Divide The Cost",
  description = "We make it easy to get the materials, molds, and expertise you need to manufacture your products & Parts",
} = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Google Site Verification Meta Tag -->
    <meta
      name="google-site-verification"
      content="uE1Tgl6rDeFmK5Uf3_Gdz-i3s8lqTww1Q5L0Sjl8Clk"
    />

    <!-- HubSpot Embed Code -->
    <script
      type="text/javascript"
      id="hs-script-loader"
      async
      defer
      src="//js-na1.hs-scripts.com/46558019.js"></script>

    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="/styles/tailwind.css" />

    <!-- Additional Meta Tags for SEO and Accessibility -->
    <meta name="theme-color" content="#ffffff" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.site} />
    <meta property="og:image" content="/assets/og-image.png" />

    <!-- Include any additional scripts or styles here -->
  </head>
  <body
    class="flex w-full lg:w-auto flex-col bg-white dark:bg-gray-900 text-gray-900 dark:text-white"
  >


    <!-- Main Content -->
    <main class="flex-grow">
          <!-- Jobwork Announcer Ticker -->
    <JobworkAnnoucer />
    <PopupCta />
    <!-- Navigation Bar -->
    <Navbar />
      <slot />
       <!-- Footer -->
    <Footer />
    </main>

   
    <SpeedInsights />

    <!-- Scripts placed at the end for better performance -->
    <script type="module" src="/scripts/main.js"></script>
  </body>
</html>
